{
    "name": "sr-expert/ypersdk-php",
    "type": "library",
    "description": "ypersdk api php",
    "keywords": [
        "ypersdk",
        "api php"
    ],
    "homepage": "https://github.com/sr-expert/ypersdk-php",
    "license": "MIT",
    "authors": [
        {
            "name": "said rajafallah",
            "email": "rajafallah@gmail.com",
            "homepage":"https://github.com/sr-expert",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yper\\SDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yper\\SDK\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}